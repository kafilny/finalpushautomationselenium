<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="cnn" parallel="tests">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="Sierra"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="53.0"/>
    <parameter name="url" value="http://www.cnn.com"/>

    <test name = "cnn Home">
        <classes>
           <class name="us.Us"/>
            <class name="world.World"/>
            <class name="politics.Politics"/>
            <class name="money.Money"/>
            <class name="opinion.Opinion"/>
            <class name="health.Health"/>
            <class name="entertainment.Entertainment"/>
            <class name="tech.Tech"/>
           <class name="style.Style"/>
            <class name="travel.Travel"/>
            <class name="sports.Sports"/>
            <class name="video.Video"/>
            <class name="vr.Vr"/>
            <class name="ushomepagetest.UsHomePageTest"/>
            <!--<class name="crimejustice.CrimeJustice"/>-->
            <class name="searchitems.SearchItems"/>

        </classes>
    </test>

</suite>